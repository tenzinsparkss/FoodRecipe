<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flamingo.foodrecipe">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Controller.RegisterActivity"></activity>
        <activity android:name=".Controller.LoginActivity" />
        <activity android:name=".Controller.HomeActivity" />
        <activity android:name=".Controller.UpdateRecipe" />
        <activity android:name=".Controller.UploadRecipe" />
        <activity android:name=".Controller.FoodDetailActivity" />
        <activity android:name=".Controller.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controller.CategoryActivity"
            android:label="Category"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Controller.MealDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>